# give chatquick user permission to start/stop/restart chatquick systemd service

%chatquick ALL=NOPASSWD: /bin/systemctl start chatquick.target
%chatquick ALL=NOPASSWD: /bin/systemctl stop chatquick.target
%chatquick ALL=NOPASSWD: /bin/systemctl restart chatquick.target
%chatquick ALL=NOPASSWD: /usr/local/bin/cwctl
